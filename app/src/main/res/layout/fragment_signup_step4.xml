<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/backButtonSignup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_back_white"
                android:layout_marginTop="4dp"
                android:scaleX="0.1"
                android:scaleY="0.3" />

            <TextView
                android:id="@+id/verifyIdentityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:text="Verify Identity" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
>

                <View
                    android:id="@+id/nameCardViewTop"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/primary_rounded_top_rectangle" />

                <View
                    android:id="@+id/nameCardViewBottom"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_below="@id/nameCardViewTop"
                    android:background="@drawable/white_rounded_bottom_rectangle" />

                <TextView
                    android:id="@+id/companyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="TJOMBOL"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/nameCardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRINCE LAU"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_below="@id/profileImageSignup4"
                    />


                <TextView
                    android:id="@+id/nameCardJobType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FULL TIME EMPLOYEE"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_below="@id/nameCardName"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameCardJobType"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:id="@+id/nameCardTitleLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/nameCardNricTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NRIC"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/nameCardEmailTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EMAIL"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardBankAccountTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BANK NO."
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardMobileTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MOBILE NO."
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardSchemeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SCHEME"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nameCardColonLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/nameCardTitleLayout"
                        android:layout_marginStart="10dp"
                        >

                        <TextView
                            android:id="@+id/nameCardNricColon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/nameCardEmailColon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardBankAccountColon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardMobileColon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardSchemeColon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nameCardLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/nameCardColonLayout"
                        android:layout_marginStart="10dp"
                        >

                        <TextView
                            android:id="@+id/nameCardNric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S1234567A"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/nameCardEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="prince@hotmail.com"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:maxLines="1"/>

                        <TextView
                            android:id="@+id/nameCardBankAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0123 123 123"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="91212121"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/nameCardScheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Flatline"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </RelativeLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageSignup4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/prince"
                    android:layout_below="@+id/companyTitle"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

            </RelativeLayout>


                <EditText
                    android:id="@+id/companyPasswordSignupEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_lock_white"
                    android:drawablePadding="15dp"
                    android:ems="13"
                    android:hint="Company PIN"
                    android:inputType="number"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat" />

                <EditText
                    android:id="@+id/monthlySalaryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_salary_white"
                    android:drawablePadding="15dp"
                    android:ems="13"
                    android:hint="Monthly Salary"
                    android:inputType="number"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/primary_rounded_rectangle"
            android:padding="12dp"
            android:text="Create Account"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:fontFamily="@font/montserrat" />

        <ImageView
            android:id="@+id/signupStepsImage4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/icon_signup_step_4" />


    </LinearLayout>



</RelativeLayout>