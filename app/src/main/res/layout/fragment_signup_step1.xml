<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/appLogoSignup"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/app_logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/app_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameSignupEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_name_white"
                android:drawablePadding="15dp"
                android:ems="13"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/emailSignupEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/icon_email_white"
                android:drawablePadding="15dp"
                android:ems="13"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/passwordSignupEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/icon_lock_white"
                android:drawablePadding="15dp"
                android:ems="13"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat" />

            <Button
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="@drawable/primary_rounded_rectangle"
                android:padding="12dp"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:fontFamily="@font/montserrat" />

            <Button
                android:id="@+id/goToLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Already have an account? Log In"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/signupStepsImage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/icon_signup_step_1" />

</RelativeLayout>